<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:background="@color/lightGray">

    <RelativeLayout
        android:id="@+id/relative_lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/comment_user_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:paddingEnd="8dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/img"
            tools:ignore="RtlSymmetry" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="2dp"
            android:layout_toStartOf="@+id/edited"
            android:layout_toEndOf="@+id/comment_user_image"
            android:gravity="start"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/comment_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"
                    android:text="@string/loading"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/lecturer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:textColor="@color/iconsColor"
                    android:visibility="gone"
                    android:textStyle="italic"
                    android:text="@string/lecturer"/>
            </LinearLayout>

            <TextView
                android:id="@+id/comment_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="@color/context_textColor"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/edited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/options_question_card"
            android:visibility="gone"
            android:textColor="#c0c0c0"
            android:text="@string/edited"/>

        <ImageView
            android:id="@+id/options_question_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingStart="6dp"
            android:paddingEnd="2dp"
            android:src="@drawable/ic_post_more_option_icon"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <TextView
        android:id="@+id/title_question_reviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_lay1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingTop="15dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tags_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_question_reviews"
        android:layout_alignStart="@+id/title_question_reviews"
        android:textColor="@color/iconsColor"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/answer_accepted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tags_post"
        android:layout_alignEnd="@+id/relative_lay1"
        android:layout_marginTop="-8dp"
        android:visibility="gone"
        android:src="@drawable/ic_spellcheck_black_24dp"
        tools:ignore="ContentDescription" />

    <developer.semojis.Helper.EmojiconTextView
        android:id="@+id/title_reviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tags_post"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingTop="15dp"
        android:linksClickable="true"
        android:autoLink="web"
        android:textColorLink="@color/iconsColor"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/ratting_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/title_reviews"
        android:layout_marginTop="5dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/business"
        android:visibility="visible"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:id="@+id/relative_lay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accept_answer_layout"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="RelativeOverlap,UseCompoundDrawables">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_favorite_black_24dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_like_questions_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/one"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/comment_comments_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/_0_replies"
            android:textColor="@color/black"
            android:textSize="13sp"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/accept_answer_layout"
        android:layout_below="@+id/ratting_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        android:gravity="bottom">

        <TextView
            android:id="@+id/accept_answer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:text="@string/was_this_answer_helpful"/>

        <TextView
            android:id="@+id/yes_accept"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:paddingEnd="6dp"
            android:paddingStart="6dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/button_follow"
            android:text="@string/yes"/>

        <TextView
            android:id="@+id/no_accept"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="15dp"
            android:paddingEnd="6dp"
            android:paddingStart="6dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/button_follow"
            android:text="@string/no"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/imgView_line"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/relative_lay2"
        android:layout_marginTop="10dp"
        android:background="#a9a4a4"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/bottom_layout_post_card"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/imgView_line"
        android:baselineAligned="false"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/like_layout_post_card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/bt_like_img"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_favorite_border_black_24dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/comment_like_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/like"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/comment_layout_post_card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/bt_comment_img"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_comment_btn"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/reply"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_layout_post_card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/share_btn"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/share"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>