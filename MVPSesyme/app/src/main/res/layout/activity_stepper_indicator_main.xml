<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ResourceName">

    <com.rakshakhegde.stepperindicator.StepperIndicator
        android:id="@+id/stepper_indicator"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:paddingTop="8dp"
        app:stpi_circleColor="@color/white"
        app:stpi_circleRadius="6dp"
        app:stpi_labelColor="@color/white"
        app:stpi_lineColor="@color/white"
        app:stpi_showLabels="true"
        app:stpi_stepCount="4" />

    <com.sesyme.sesyme.data.NonSwipeAbleViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stepper_indicator"
        android:layout_alignParentStart="true"/>
</RelativeLayout>
