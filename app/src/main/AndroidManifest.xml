<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sesyme.sesyme">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".SesymeApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ProfileActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".RequestsActivity" />
        <activity android:name=".ClusterAttachments" />
        <activity
            android:name=".ReadArticle"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AnswerQuiz" />
        <activity
            android:name=".CreateQuiz"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ClusterDescription"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".WriteArticle"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AnswerPoll"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".CreatePoll" />
        <activity
            android:name=".ClusterChat"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="OPEN_CLUSTER_CHAT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateCluster"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="www.sesyme.com"
                    android:pathPrefix="/payment"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity android:name=".Setting" />
        <activity android:name=".ViewImage" />
        <activity android:name=".MyPosts" />
        <activity android:name=".OthersProfile" />
        <activity
            android:name=".WelcomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AnswersActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.ScrollableMenuActivity.NoActionBar">
            <intent-filter>
                <action android:name="OPEN_ACTIVITY_1" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="sesyme.com"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity android:name=".SendFeedBack" />
        <activity android:name=".WritePostActivity" />
        <activity android:name=".ForgotPasswordActivity" />
        <activity
            android:name=".LoginActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".WelcomeActivity" />
        <activity
            android:name=".DashboardActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".allagi.MenuListActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".allagi.ScrollableMenuActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.ScrollableMenuActivity.NoActionBar" />
        <activity android:name=".SignUpProcess">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="*"
                    android:scheme="file" />
                <data android:pathPattern=".*\\.epub" />
                <data android:mimeType="application/epub+zip" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Splash"
            android:theme="@style/Theme.Transparent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <service
            android:name=".data.MyFirebaseMessagingService"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>