<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="66dp"
    android:maxWidth="110dp"
    android:paddingStart="2dp"
    android:paddingTop="2dp"
    tools:ignore="RtlSymmetry">

    <TextView
        android:id="@+id/poll_card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/poll_card_creator_image"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxWidth="110dp"
        android:maxLines="1"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:text="@string/loading"
        android:textSize="12sp"
        android:textStyle="bold" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/poll_card_symbol"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:elevation="2dp"
        android:layout_toEndOf="@+id/poll_card_creator_image"
        android:background="@drawable/bt_ui_interests"
        android:src="@drawable/polls"
        tools:ignore="ContentDescription" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/poll_card_creator_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="2dp"
        android:src="@drawable/img" />
</RelativeLayout>