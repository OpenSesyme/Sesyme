<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cover_image_others_profile"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/leee"
                tools:ignore="ContentDescription" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_pic_others_profile"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="195dp"
                android:src="@drawable/img" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlUserP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/banner"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/username_others_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/black"
                android:text="@string/loading"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/verified_lecturer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/username_others_profile"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/username_others_profile"
                android:textColor="@color/iconsColor"
                android:text="@string/verified"
                android:visibility="gone"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/course_others_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/username_others_profile"
                android:layout_alignParentStart="true"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/black"
                android:textSize="@dimen/medium_text_size"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/university_other_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/course_others_profile"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/black"
                android:textSize="@dimen/medium_text_size" />

            <TextView
                android:id="@+id/bio_other_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/university_other_profile"
                android:gravity="center"
                android:maxLines="3"
                android:paddingLeft="16dp"
                android:paddingTop="15dp"
                android:paddingBottom="5dp"
                android:maxLength="100"
                android:paddingRight="16dp"
                android:textSize="@dimen/small_text_size"
                android:textStyle="italic"/>

            <LinearLayout
                android:id="@+id/lUserFollows"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bio_other_profile"
                android:layout_marginTop="18dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="3dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <LinearLayout
                    android:id="@+id/answers_layout_others"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/button_follow"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/answers_others_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/title_text_size" />

                    <TextView
                        android:id="@+id/answers_button_others_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="@string/answers"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/title_text_size"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/questions_layout_others"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/bt_ui"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/questions_others_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/title_text_size" />

                    <TextView
                        android:id="@+id/questions_button_others_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="9dp"
                        android:text="@string/questions"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/title_text_size"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/helpful_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lUserFollows"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <LinearLayout
                    android:id="@+id/helpful_answers_layout_others"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/helpful_others_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/zero"
                        android:textSize="@dimen/small_text_size"
                        android:textStyle="italic"/>

                    <TextView
                        android:id="@+id/helpful_button_others_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="@string/helpful"
                        android:textSize="@dimen/small_text_size"
                        android:textStyle="italic" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/answered_layout_others"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="6dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/answered_others_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/zero"
                        android:textSize="@dimen/small_text_size"
                        android:textStyle="italic"/>

                    <TextView
                        android:id="@+id/answered_button_others_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="9dp"
                        android:text="@string/answered"
                        android:textSize="@dimen/small_text_size"
                        android:textStyle="italic"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/empty_others_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/lUserFollows"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:gravity="center"
                android:visibility="gone"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_others_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/helpful_layout"
                android:layout_margin="6dp" />
        </RelativeLayout>
        <ProgressBar
            android:id="@+id/others_progress_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>