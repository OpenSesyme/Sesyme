<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingBottom="30dp">

    <TextView
        android:id="@+id/empty_answer_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/btn_next_answer_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dots_answer_quiz"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@drawable/bt_ui"
        android:text="@string/next"
        android:textColor="@color/white" />

    <LinearLayout
        android:id="@+id/dots_answer_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:paddingStart="18dp"
        android:paddingEnd="18dp">

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/lightGray"
        android:visibility="gone"
        android:paddingTop="30dp"
        android:elevation="4dp"
        android:radius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <TextView
                android:id="@+id/question_answer_quiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_horizontal"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:text="@string/loading"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radio_group_answer_quiz"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radio1_answer_quiz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:padding="16dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="@string/loading"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radio2_answer_quiz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:padding="16dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="@string/loading"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radio3_answer_quiz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:padding="16dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="@string/loading"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radio4_answer_quiz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:padding="16dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="@string/loading"
                    android:textSize="16sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/score_answer_quiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/score_percent_answer_quiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"
                android:visibility="gone"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/quiz_results_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
</RelativeLayout>

