<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@null"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/other_message_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingStart="15dp"
        android:paddingTop="5dp"
        android:paddingEnd="60dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/message_other_profile_pic"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/img" />

        <TextView
            android:id="@+id/message_other_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/message_other_profile_pic"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/message_other_profile_pic"
            android:gravity="center_vertical"
            android:text="@string/loading"
            android:textSize="12sp" />

        <RelativeLayout
            android:id="@+id/text_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_other_name"
            android:layout_alignStart="@+id/message_other_name"
            android:layout_marginTop="4dp"
            android:background="@drawable/their_message"
            android:orientation="vertical"
            android:padding="5dp"
            android:visibility="visible">

            <androidx.cardview.widget.CardView
                android:id="@+id/image_card_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardCornerRadius="4dp">

                <ImageView
                    android:id="@+id/other_attachment"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true"
                    android:visibility="gone"
                    tools:ignore="ContentDescription" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/other_text_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/image_card_other"
                android:layout_alignEnd="@+id/image_card_other"
                android:layout_below="@+id/image_card_other">

                <developer.semojis.Helper.EmojiconTextView
                    android:id="@+id/message_other_body"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/loading"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/message_time_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_alignBottom="@+id/text_form"
            android:layout_toStartOf="@+id/text_form"
            android:layout_marginStart="3dp"
            android:layout_marginTop="-3dp"
            android:textColor="@color/context_textColor"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <ImageView
            android:id="@+id/like_message_other"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/ic_favorite"
            android:layout_marginBottom="-6dp"
            android:layout_alignStart="@+id/text_form"
            android:layout_below="@+id/text_form"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/like_message_text"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_toEndOf="@+id/like_message_other"
            android:layout_below="@+id/text_form"
            android:gravity="center_vertical|start"
            android:text="@string/zero"
            android:textSize="10sp"
            tools:ignore="SmallSp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/my_message_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingStart="60dp"
        android:paddingTop="5dp"
        android:paddingEnd="15dp">

        <ImageView
            android:id="@+id/like_message_me"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignEnd="@+id/text_form_me"
            android:layout_below="@+id/text_form_me"
            android:src="@mipmap/ic_favorite"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/like_message_text_me"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_toStartOf="@+id/like_message_me"
            android:layout_below="@+id/text_form_me"
            android:gravity="end|center_vertical"
            android:text="@string/zero"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/message_pic_me"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/img" />

        <TextView
            android:id="@+id/message_name_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/message_pic_me"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/message_pic_me"
            android:gravity="center_vertical"
            android:text="@string/loading"
            android:textSize="12sp" />

        <RelativeLayout
            android:id="@+id/text_form_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_name_me"
            android:layout_toStartOf="@+id/message_time_me"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/my_message"
            android:padding="5dp">


            <androidx.cardview.widget.CardView
                android:id="@+id/image_card_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardCornerRadius="4dp">

                <ImageView
                    android:id="@+id/my_attachment"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true"
                    android:visibility="gone"
                    tools:ignore="ContentDescription" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/my_text_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_card_me"
                android:layout_alignStart="@+id/image_card_me"
                android:layout_alignEnd="@+id/image_card_me">

                <developer.semojis.Helper.EmojiconTextView
                    android:id="@+id/message_body_me"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/loading"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/message_time_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:textColor="@color/context_textColor"
            android:layout_alignBottom="@+id/text_form_me"
            android:layout_alignEnd="@+id/message_name_me"
            android:layout_marginStart="3dp"
            android:layout_marginTop="-3dp"
            android:text="@string/now"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_form_me"
            android:layout_alignEnd="@+id/text_form_me"
            android:layout_marginTop="8dp"
            android:background="@color/lightGray"
            android:visibility="gone">

            <ImageView
                android:id="@+id/attachment_group_message"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/img"
                android:visibility="visible"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/attachment_group_message"
                android:layout_alignStart="@+id/attachment_group_message"
                android:layout_alignEnd="@+id/attachment_group_message"
                android:gravity="center"
                android:visibility="visible" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>