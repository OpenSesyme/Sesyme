<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chat_wallpaper"
    android:orientation="vertical">

    <TextView
        android:id="@+id/empty_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:text="@string/say_hello"/>

    <ProgressBar
        android:id="@+id/progress_cluster_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:elevation="2dp"/>

    <ImageView
        android:id="@+id/chat_add_poll"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:elevation="2dp"
        android:padding="6dp"
        android:src="@drawable/ic_add_circle_outline_black_24dp"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/chat_send"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:elevation="2dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="12dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_send_black_24dp"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:id="@+id/toolbar_group_message"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/iconsColor">

        <ImageView
            android:id="@+id/chat_back_button"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:src="@drawable/back_navigation"
            tools:ignore="ContentDescription" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/chat_cluster_icon"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:src="@drawable/img"
            android:padding="8dp"
            android:layout_toEndOf="@+id/chat_back_button" />

        <TextView
            android:id="@+id/group_chat_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/chat_cluster_icon"
            android:layout_toStartOf="@+id/bt_search_chat"
            android:textColor="@color/white"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="@string/loading"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/et_chat_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/chat_back_button"
            android:inputType="textShortMessage"
            android:background="@color/white"
            android:hint="@string/search_a_keyword"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="6dp"
            android:visibility="gone"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            tools:ignore="Autofill" />

        <ImageView
            android:id="@+id/chat_close_search"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="6dp"
            android:padding="12dp"
            android:visibility="gone"
            android:src="@drawable/ic_close_black_24dp"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/bt_search_chat"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="6dp"
            android:padding="14dp"
            android:src="@drawable/ic_search_black_24dp"
            android:textColor="#fff"
            android:visibility="visible"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_poll_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_group_message"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat_poll_recycler_view"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:paddingBottom="4dp"
        android:scrollbars="vertical" />

    <ListView
        android:id="@+id/chat_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat_poll_recycler_view"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"
        android:divider="@null"
        android:stackFromBottom="true"
        android:paddingBottom="4dp"
        android:scrollbars="vertical"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/chat_input_attachment_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/chat_input_layout"
        android:padding="2dp"
        android:layout_marginBottom="4dp"
        android:background="#66000000"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/chat_input_image"
            android:layout_width="100dp"
            android:layout_height="90dp"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <Button
        android:id="@+id/chat_bt_join"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bt_ui_interests"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:text="@string/join"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/chat_input_layout"
        android:layout_alignBottom="@+id/chat_input_layout"
        android:layout_marginBottom="-4dp"
        android:layout_marginTop="-4dp"
        android:background="@color/white"/>

    <LinearLayout
        android:id="@+id/chat_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:minHeight="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/button_follow"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="3dp">

        <ImageButton
            android:id="@+id/chat_emoji"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="2dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/smiley"
            tools:ignore="ContentDescription" />

        <developer.semojis.Helper.EmojiconEditText
            android:id="@+id/chat_bottom_message_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="35dp"
            android:layout_weight="1"
            android:maxLines="4"
            android:focusableInTouchMode="true"
            android:background="@null"
            android:hint="@string/type_a_message"
            android:inputType="textMultiLine" />

        <ImageView
            android:id="@+id/chat_attach"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_attach_file_black_24dp"
            tools:ignore="ContentDescription" />
    </LinearLayout>
</RelativeLayout>
