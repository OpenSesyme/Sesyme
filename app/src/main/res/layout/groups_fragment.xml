<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh_clusters"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <GridView
                    android:id="@+id/groups_list_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="55dp"
                    android:nestedScrollingEnabled="true"
                    android:numColumns="2"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/default_clusters_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:baselineAligned="false"
                    android:gravity="center"
                    android:numColumns="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                        android:id="@+id/help_cluster"
                        android:layout_width="160dp"
                        android:layout_height="210dp"
                        android:layout_margin="12dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="32dp"
                                android:background="@color/iconsColor" />

                            <TextView
                                android:id="@+id/help_name_single_item"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/help_image_single_item"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="8dp"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:maxLines="2"
                                android:text="@string/help_cluster"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/help_time_single_item"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/help_name_single_item"
                                android:layout_centerHorizontal="true"
                                android:gravity="center"
                                android:text="@string/here_to_help"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/help_description_single_item"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/help_line_break"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="5dp"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:paddingStart="10dp"
                                android:paddingTop="10dp"
                                android:paddingEnd="10dp"
                                android:text="@string/got_a_question"
                                android:textSize="10sp"
                                tools:ignore="SmallSp" />

                            <View
                                android:id="@+id/help_line_break"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/help_time_single_item"
                                android:paddingStart="10dp"
                                android:layout_marginTop="20dp"
                                android:paddingEnd="10dp"
                                android:background="@android:color/darker_gray" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/help_image_single_item"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="8dp"
                                android:src="@drawable/img" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/general_cluster"
                        android:layout_width="160dp"
                        android:layout_height="210dp"
                        android:layout_margin="12dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/general_name_single_item"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/general_image_single_item"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="8dp"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:maxLines="2"
                                android:text="@string/general_cluster"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/general_time_single_item"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/general_name_single_item"
                                android:layout_centerHorizontal="true"
                                android:gravity="center"
                                android:text="@string/student_community"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/general_description_single_item"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/general_line_break"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="5dp"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:paddingStart="10dp"
                                android:paddingTop="10dp"
                                android:paddingEnd="10dp"
                                android:text="@string/network"
                                android:textSize="10sp"
                                tools:ignore="SmallSp" />

                            <View
                                android:id="@+id/general_line_break"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/general_time_single_item"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="10dp"
                                android:background="@android:color/darker_gray" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="32dp"
                                android:background="@color/iconsColor" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/general_image_single_item"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="8dp"
                                android:src="@drawable/img" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/groups_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/default_clusters_layout"
                    android:nestedScrollingEnabled="true"
                    android:paddingBottom="55dp" />
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="60dp"
            android:src="@drawable/ic_add_circle_outline_white_24dp" />
    </RelativeLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
