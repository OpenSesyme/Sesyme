<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center_horizontal">

    <LinearLayout
        android:id="@+id/action_bar_create_quiz"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/iconsColor"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_create_quiz"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/finish_create_quiz"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:text="@string/finish"
            android:paddingEnd="12dp"
            android:paddingStart="6dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

        <TextView
            android:id="@+id/cancel_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="@string/cancel"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/bt_next_quiz_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:background="@drawable/button_follow"
                android:text="@string/next" />
        </LinearLayout>
    </LinearLayout>


    <ProgressBar
        android:id="@+id/progress_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/title_layout_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/action_bar_create_quiz">

        <EditText
            android:id="@+id/et_title_quiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="12dp"
            android:maxLength="50"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="center"
            android:hint="@string/title_quiz"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:paddingStart="12dp"
            android:paddingTop="6dp"
            android:paddingEnd="12dp"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="Autofill" />

        <ImageView
            android:id="@+id/quiz_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/release_quiz_date"
            android:layout_alignEnd="@+id/et_title_quiz"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_event_available_black_24dp"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/answers_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/release_answers_date"
            android:layout_alignEnd="@+id/et_title_quiz"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_event_available_black_24dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/release_quiz_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_title_quiz"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="12dp"
            android:text="@string/quiz_publish_date"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description_release_date_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/release_quiz_text"
            android:layout_alignStart="@+id/release_quiz_text"
            android:layout_toStartOf="@+id/release_quiz_date"
            android:layout_marginEnd="12dp"
            android:text="@string/quiz_release_des"
            android:textSize="12sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/release_answers_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description_release_date_quiz"
            android:layout_marginStart="12dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="12dp"
            android:text="@string/answers_publish_date"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/release_answers_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/release_answers_text"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="12dp"
            android:layout_toStartOf="@+id/answers_calendar"
            android:text="@string/now" />

        <TextView
            android:id="@+id/release_quiz_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/release_quiz_text"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="12dp"
            android:layout_toStartOf="@+id/quiz_calendar"
            android:text="@string/now" />

        <TextView
            android:id="@+id/description_release_date_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/release_answers_text"
            android:layout_alignStart="@+id/release_answers_text"
            android:text="@string/answers_release_des"
            android:layout_toStartOf="@+id/release_answers_date"
            android:layout_marginEnd="12dp"
            android:textSize="12sp"
            android:textStyle="italic" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/quiz_questions_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/action_bar_create_quiz"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_question_quiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:maxLength="180"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="18dp"
            android:background="@null"
            android:gravity="center"
            android:hint="@string/title"
            android:inputType="textShortMessage"
            android:textSize="18sp"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/et_option1_quiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/radio_group_quiz"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:maxLength="100"
            android:layout_toEndOf="@+id/radio_group_quiz"
            android:ems="10"
            android:hint="@string/first_choice"
            android:inputType="textPersonName"
            android:textSize="16sp"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/et_option2_quiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_option1_quiz"
            android:layout_marginLeft="10dp"
            android:maxLength="100"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/radio_group_quiz"
            android:ems="10"
            android:hint="@string/second_choice"
            android:inputType="textPersonName"
            android:textSize="16sp"
            tools:ignore="Autofill" />


        <EditText
            android:id="@+id/et_option3_quiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_option2_quiz"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:maxLength="100"
            android:layout_toEndOf="@+id/radio_group_quiz"
            android:ems="10"
            android:hint="@string/third_choice"
            android:inputType="textPersonName"
            android:textSize="16sp"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/et_option4_quiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_option3_quiz"
            android:maxLength="100"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/radio_group_quiz"
            android:ems="10"
            android:hint="@string/fourth_choice"
            android:inputType="textPersonName"
            android:textSize="16sp"
            tools:ignore="Autofill" />

        <RadioGroup
            android:id="@+id/radio_group_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_question_quiz"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio1_quiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp" />

            <RadioButton
                android:id="@+id/radio2_quiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"/>

            <RadioButton
                android:id="@+id/radio3_quiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp" />

            <RadioButton
                android:id="@+id/radio4_quiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/correct_answer_message"
            android:layout_below="@+id/radio_group_quiz"
            android:layout_alignStart="@+id/radio_group_quiz"
            android:paddingStart="12dp"
            android:paddingEnd="2dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>
</RelativeLayout>