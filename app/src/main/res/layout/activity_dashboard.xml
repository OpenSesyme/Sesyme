<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".DashboardActivity">

    <RelativeLayout
        android:id="@+id/action_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/iconsColor">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logo_dashboard"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:padding="4dp"
            android:src="@drawable/img" />

        <ImageView
            android:id="@+id/page_dashboard"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingEnd="6dp"
            android:src="@drawable/sesyme_app_logo"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/et_search_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="3dp"
            android:background="@color/white"
            android:hint="@string/search"
            android:inputType="textPersonName"
            android:paddingStart="12dp"
            android:paddingEnd="6dp"
            android:textColor="@color/iconsColor"
            android:textColorHint="@color/iconsColor"
            android:visibility="gone"
            tools:ignore="Autofill" />

        <LinearLayout
            android:id="@+id/icons_layout_dashboard"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_toStartOf="@+id/logo_dashboard">

            <ImageView
                android:id="@+id/courses_button"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/ic_categories"
                android:visibility="visible"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/search_icon_home"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_search_black_24dp"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <ImageView
            android:id="@+id/close_icon_home"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/et_search_home"
            android:layout_marginEnd="8dp"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:paddingEnd="1dp"
            android:paddingBottom="12dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_close_black_24dp"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        tools:layout_editor_absoluteX="16dp" />

    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:mbn_backgroundBottomColor="#ffffff"
        app:mbn_countBackgroundColor="#ff6f00"
        app:mbn_countTextColor="#ffffff"
        app:mbn_defaultIconColor="@color/gray"
        app:mbn_rippleColor="#2f424242"
        app:mbn_selectedIconColor="@color/iconsColor"
        app:mbn_shadowColor="#1f212121" />
</FrameLayout>