<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99D4E9FC"
    tools:context=".MyPosts">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_my_posts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/empty_posts_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textSize="20sp"
        android:visibility="gone"
        android:text="@string/empty_posts"
        app:layout_constraintBottom_toBottomOf="@+id/recycler_my_posts"
        app:layout_constraintEnd_toEndOf="@+id/recycler_my_posts"
        app:layout_constraintStart_toStartOf="@+id/recycler_my_posts"
        app:layout_constraintTop_toTopOf="@+id/recycler_my_posts" />

    <Button
        android:id="@+id/ask_posts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/bt_ui"
        android:text="@string/ask"
        android:visibility="gone"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/recycler_my_posts"
        app:layout_constraintStart_toStartOf="@+id/recycler_my_posts"
        app:layout_constraintTop_toBottomOf="@+id/empty_posts_profile" />

    <ProgressBar
        android:id="@+id/posts_progress_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recycler_my_posts" />
</androidx.constraintlayout.widget.ConstraintLayout>