<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/info_portal_root_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="55dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tags_recycler_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/info_portal_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tags_recycler_info"/>

    <TextView
        android:id="@+id/info_portal_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="12dp"
        android:text="@string/empty_news_feed"
        android:gravity="center"
        android:textSize="16sp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/info_portal_docs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/info_portal_article"
        android:layout_alignEnd="@+id/info_portal_fab"
        android:background="@drawable/bt_ui"
        android:visibility="gone"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="12dp"
        android:elevation="3dp"
        app:cardCornerRadius="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="4dp"
            android:paddingTop="2dp"
            android:layout_gravity="center"
            android:background="@color/iconsColor"
            android:text="@string/upload_a_document"
            android:textColor="@color/white"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/info_portal_article"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/info_portal_fab"
        android:layout_alignEnd="@+id/info_portal_fab"
        android:background="@drawable/bt_ui"
        android:layout_marginEnd="6dp"
        android:visibility="gone"
        android:elevation="3dp"
        app:cardCornerRadius="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="4dp"
            android:paddingTop="2dp"
            android:layout_gravity="center"
            android:background="@color/iconsColor"
            android:text="@string/write_an_article"
            android:textColor="@color/white"/>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/info_portal_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_add_circle_outline_white_24dp"/>

</RelativeLayout>