<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WriteArticle">

    <ProgressBar
        android:id="@+id/article_progress_bar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:elevation="2dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/article_progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:textColor="@color/iconsColor"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/article_toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/iconsColor">

        <ImageView
            android:id="@+id/article_back"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:src="@drawable/back_navigation"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/article_publish"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:textColor="@color/white"
            android:text="@string/publish"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/article_toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/article_course_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/article_input_layout_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/article_course_recycler"
                android:layout_marginBottom="4dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/article_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:background="@null"
                    android:maxLines="4"
                    android:layout_marginBottom="8dp"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:paddingTop="6dp"
                    android:inputType="textShortMessage|textMultiLine"
                    tools:ignore="Autofill" />
            </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/article_input_layout_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/article_image_layout"
                    android:layout_marginEnd="2dp">

                    <developer.semojis.Helper.EmojiconEditText
                        android:id="@+id/article_body"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="100dp"
                        android:background="@null"
                        android:gravity="start"
                        android:inputType="textMultiLine|textAutoComplete"
                        android:textSize="14sp"
                        android:paddingEnd="8dp"
                        android:paddingStart="8dp"
                        android:paddingBottom="6dp"
                        tools:ignore="Autofill" />
                </com.google.android.material.textfield.TextInputLayout>


            <RelativeLayout
                android:id="@+id/article_image_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/article_input_layout_title"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/article_cancel_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:paddingEnd="5dp"
                    android:paddingTop="12dp"
                    android:paddingStart="12dp"
                    android:paddingBottom="8dp"
                    android:elevation="2dp"
                    android:layout_marginTop="-18dp"
                    android:layout_alignTop="@+id/article_image"
                    android:src="@mipmap/ic_cancel"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/article_image"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:contentDescription="@string/post_image"
                    android:src="@drawable/article_image"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>