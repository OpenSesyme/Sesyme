<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/poll_answer_toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/iconsColor">

        <ImageView
            android:id="@+id/poll_answer_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:src="@drawable/back_navigation"
            tools:ignore="ContentDescription" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/poll_answer_creator_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_toEndOf="@+id/poll_answer_back"
            android:layout_marginTop="5dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/img" />

        <TextView
            android:id="@+id/poll_answer_creator_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/poll_answer_creator_image"
            android:layout_alignBottom="@+id/poll_answer_creator_image"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/poll_answer_creator_image"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:paddingBottom="4dp"
            android:text="@string/loading"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/poll_answer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/poll_answer_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:padding="12dp"
        android:gravity="center_horizontal"
        android:text="@string/loading"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/poll_answer_option_1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/poll_answer_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_follow"
        android:gravity="center_horizontal"
        android:padding="12dp"
        android:text="@string/loading"
        android:textColor="@color/iconsColor"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/poll_answer_option_2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/poll_answer_option_1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_follow"
        android:gravity="center_horizontal"
        android:padding="12dp"
        android:text="@string/loading"
        android:textColor="@color/iconsColor"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/poll_answer_option_3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/poll_answer_option_2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_follow"
        android:gravity="center_horizontal"
        android:padding="12dp"
        android:text="@string/loading"
        android:textColor="@color/iconsColor"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/poll_answer_option_4"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/poll_answer_option_3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_follow"
        android:gravity="center_horizontal"
        android:padding="12dp"
        android:text="@string/loading"
        android:textColor="@color/iconsColor"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/poll_answered_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/poll_answer_option_4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/poll_answer_expires"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/poll_answered_total"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
</RelativeLayout>