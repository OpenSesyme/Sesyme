<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/snackBar"
    android:background="@drawable/background_ui"
    tools:actionBarNavMode="standard"
    tools:ignore="ResourceName">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingBottom="20dp"
        tools:context=".Registration.LoginActivity">

        <ImageView
            android:id="@+id/tvMountain"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/welcome_sesyme"
            android:textStyle="bold"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMountain"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/et_ui"
            android:drawablePadding="@dimen/interests_padding"
            android:hint="@string/username"
            android:inputType="text"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/gotham"
            tools:ignore="Autofill" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etPasswordInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etUsername"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:hint="@string/password"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etUsername"
                android:background="@drawable/et_ui"
                android:drawablePadding="@dimen/interests_padding"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:paddingStart="15dp"
                android:paddingTop="15dp"
                android:paddingEnd="@dimen/interests_padding"
                android:paddingBottom="10dp"
                android:fontFamily="@font/gotham"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etPasswordInputLayout"
            android:layout_alignEnd="@+id/etPasswordInputLayout"
            android:background="@null"
            android:fontFamily="@font/gotham"
            android:text="@string/forgot_your_password"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btLogin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/btForgotPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:background="@drawable/button_interests"
            android:text="@string/login"
            android:textAllCaps="true"
            android:textColor="@color/white" />

        <LinearLayout
            android:id="@+id/or_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btLogin"
            android:layout_marginStart="20dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                style="@style/Divider"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:background="@color/white"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/or_login_with_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham"
                android:gravity="center_horizontal"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="9dp"
                android:text="@string/or_login_with"
                android:textColor="@color/white" />

            <View
                style="@style/Divider"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:background="@color/white"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/or_text_layout"
            android:layout_alignStart="@+id/etPasswordInputLayout"
            android:layout_alignEnd="@+id/etPasswordInputLayout"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal">

            <com.shobhitpuri.custombuttons.GoogleSignInButton
                android:id="@+id/btSignInGoogleCustom"
                android:layout_width="302dp"
                android:layout_height="wrap_content"
                android:text="Continue with Google"
                android:textColor="@color/white"
                android:background="@drawable/dark_theme_google_icon_selector"
                app:isDarkTheme="true" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_bar_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />
    </RelativeLayout>
</ScrollView>